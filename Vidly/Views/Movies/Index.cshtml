@model List<Vidly.Models.Movie>

@{
	ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("New", "Movies")" class="btn btn-primary" style="margin-bottom: 10px;"><i class="fas fa-plus"></i>&nbsp;&nbsp;New Movie</a>

@if (Model.Count == 0)
{
	<text>We don't have any movies yet</text>
}
else
{
	<table class="table table-bordered">
		<thead class="thead-dark">
			<tr>
				<th>Movie</th>
				<th>Genre</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { movie.Id }, null)</td>
					<td>@movie.Genre.Name</td>
				</tr>
			}
		</tbody>
	</table>
}