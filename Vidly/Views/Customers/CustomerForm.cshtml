@model Vidly.ViewModels.CustomerFormViewModel
@{
	ViewBag.Title = "Customer";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Customers"))
{
	@Html.HiddenFor(m => m.Id)

	@Html.ValidationSummary()

	<div class="form-group">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.DateOfBirth)
		@Html.TextBoxFor(m => m.DateOfBirth, "{0:dd/MM/yyyy}", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.MembershipTypeId)
		@Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
	</div>
	<div class="form-group form-check">
		@Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new { @class = "form-check-input" })
		@Html.LabelFor(m => m.IsSubscribedToNewsletter, new { @class = "form-check-label" })
	</div>

	<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;&nbsp;Save</button>
}