@model List<Vidly.Models.Customer>

@{
	ViewBag.Title = "Customers";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("New")" class="btn btn-primary" style="margin-bottom: 10px;"><i class="fas fa-user-plus"></i>&nbsp;&nbsp;New Customer</a>


@if (Model.Count == 0)
{
	<text>We don't have any customers yet</text>
}
else
{
	<table class="table table-bordered">
		<thead class="thead-dark">
			<tr>
				<th>Customer</th>
				<th>Discount Rate</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { customer.Id }, null)</td>
					<td>@customer.MembershipType.Name</td>
				</tr>
			}
		</tbody>
	</table>
}